html, body 
	width 100%
	height 100%

* 
	padding 0
	margin 0
	box-sizing border-box
	position relative


div 
	width 100%
	height 100%
	display flex
	align-items center
	justify-content center
	flex-flow column

h1
	font 300 50px/1 "Rajdhani", sans-serif
	letter-spacing 2px
	color black


hr 
	margin 20px 0
	width 10%
	height 4px
	background rgb(244,247,250)
	border 0


h2 
	font 300 18px/1 "Poppins", sans-serif
	letter-spacing 1px
	color rgb(50,75,100)
	
a
	position absolute
	padding 20px 0
	bottom 0
	left 50%
	transform translate(-50%)
	font 300 12px "Poppins", sans-serif
	letter-spacing 1px
	color rgb(224, 86, 164)
	align-self flex-end
	
	&:link, &:visited
		text-decoration none
		
	&:visited:hover, &:hover
		text-decoration underline
