section.welcome
	width 100%
	height 100%
	
	div.main
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		display flex
		align-items center
		justify-content center
		flex-direction column
		
		h2 
			font 300 14px/1 $arcon
			letter-spacing 4px
			color $iron

		h1
			margin 18px 0
			font 300 50px/1 $rajdhani
			letter-spacing 3px
			color black
		
		a
			font 300 15px/1 $arcon
			letter-spacing 1px
			text-decoration none
			color black
			
			&::after
				content ""
				position absolute
				bottom -2px
				left 0
				width 100%
				height 1px
				background $deep-blush

				
	div.footer
		position absolute
		bottom 0
		left 50%
		transform translate(-50%)
		
		p
			margin 15px 0
			font 300 15px/1 $rajdhani
			color $calypso