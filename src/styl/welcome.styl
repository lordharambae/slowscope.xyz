				font-size 14px

			h1
				margin 18px 0
				font-size 50px
			
			a
				font-size 15px
					
		div.footer
			
			p
				margin 15px 0
				font-size 15px


@media only screen and (min-width: $large) and (max-width: $xlarge - 1)

	section.welcome

		div.main
			
			h2 
				font-size 16px

			h1
				margin 18px 0
				font-size 57px
			
			a
				font-size 17px
					
		div.footer
			
			p
				margin 18px 0
				font-size 17px


@media only screen and (min-width: $xlarge)

	section.welcome

		div.main
			
			h2 
				font-size 18px

			h1
				margin 18px 0
				font-size 64px
			
			a
				font-size 19px
					
		div.footer
			
			p
				margin 21px 0
